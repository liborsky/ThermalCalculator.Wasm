        </RadzenColumn>

        <!-- Graf a v√Ωsledky -->
        <RadzenColumn Size="12" SizeMD="8">
            @if (result == null)
            {
                <RadzenCard>
                    <RadzenStack Orientation="Orientation.Vertical"
