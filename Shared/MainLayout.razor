@inherits LayoutComponentBase

<PageTitle>Výpočet izolace</PageTitle>

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween" Gap="0.5rem" Style="padding: 0.5rem 1rem; height: 100%;">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                <RadzenSidebarToggle Click="@SidebarToggleClick" />
                <RadzenLabel Text="Výpočet izolace" Style="font-size: 1.1rem; font-weight: bold;" />
            </RadzenStack>
            <a href="https://kabefarben.cz" target="_blank" rel="noopener noreferrer" style="display: inline-block; line-height: 0;">
                <RadzenImage Path="/Logo_KABEfarben.png" Style="height: 72px; width: auto; cursor: pointer;" AlternateText="KABE" />
            </a>
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="sidebarExpanded">
        <NavMenu />
    </RadzenSidebar>
    <RadzenBody>
        <div style="padding: 1rem;">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>

@code {
    bool sidebarExpanded = true;

    void SidebarToggleClick()
    {
        sidebarExpanded = !sidebarExpanded;
    }
}
